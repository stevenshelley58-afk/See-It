{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "bash -c 'cd app && npm install && npx prisma generate && npm run build'"
    },
    "deploy": {
        "startCommand": "bash -c 'cd app && npm run start'",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}