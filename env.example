# Copy this file to .env and fill in your values
# DO NOT commit the .env file to version control

# === Shopify App Configuration ===
SHOPIFY_APP_URL=https://your-app-url.ngrok.io
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SCOPES=write_products,read_products,write_themes,read_themes

# === Database Configuration ===
# For local development with SQLite
DATABASE_URL=file:./prisma/dev.sqlite

# For production with PostgreSQL
# DATABASE_URL=postgresql://user:password@host:port/database

# === Image Service Configuration ===
IMAGE_SERVICE_BASE_URL=http://localhost:8001
IMAGE_SERVICE_TOKEN=your-secret-token-here

# === Google Cloud Storage ===
GCS_BUCKET=see-it-room

# === Google Cloud Credentials ===
# Option 1: Path to service account JSON file (local dev)
GOOGLE_APPLICATION_CREDENTIALS=./image-service/gcs-key.json

# Option 2: JSON string (Railway/Cloud Run - paste full JSON content)
# GOOGLE_CREDENTIALS_JSON={"type":"service_account","project_id":"...","private_key":"...",...}

# === Optional: Gemini API for AI features ===
GEMINI_API_KEY=your_gemini_api_key

# === Product Prep (Background Removal) ===
# Used by `app/app/services/background-remover.server.ts` (Prodia BiRefNet 2)
PRODIA_API_TOKEN=your_prodia_api_token

# === Object Removal (Inpainting) ===
# Used by `app/app/services/image-removal.server.ts` (Clipdrop Cleanup API)
CLIPDROP_API_KEY=your_clipdrop_api_key

# === Node Environment ===
NODE_ENV=development  # or production

# === Port Configuration ===
PORT=3000
IMAGE_SERVICE_PORT=8001
